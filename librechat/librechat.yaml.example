# LibreChat Configuration for CLI Proxy API Integration
#
# Setup:
# 1. Copy this file to librechat.yaml:
#    cp librechat.yaml.example librechat.yaml
#
# 2. Start the stack:
#    docker compose -f docker-compose.full.yml up -d
#
# 3. Access LibreChat at http://localhost:3080
#    - Create an account
#    - Select "CLIProxyAPI" as the endpoint
#    - Enter your API_KEY when prompted

version: 1.1.5

cache: true

endpoints:
  custom:
    - name: "CLIProxyAPI"
      # "user_provided" means users enter their API key in the LibreChat UI
      # Replace with your actual key if you want it pre-configured
      apiKey: "user_provided"
      baseURL: "http://cli-proxy-api:8317/v1"
      models:
        default:
          - claude-sonnet-4-20250514
          - claude-opus-4-20250514
          - claude-3-5-sonnet-20241022
          - claude-3-5-haiku-20241022
          - gemini-2.5-flash
          - gemini-2.5-pro
          - gpt-4o
          - gpt-4o-mini
        # Auto-fetch available models from CLIProxyAPI
        fetch: true
      titleConvo: true
      titleModel: "claude-3-5-haiku-20241022"
      summarize: false
      forcePrompt: false
      modelDisplayLabel: "CLIProxyAPI"

# Model specifications for better UI experience
# Each item MUST have a preset object
modelSpecs:
  list:
    - name: "claude-sonnet-4-20250514"
      label: "Claude Sonnet 4"
      description: "Anthropic's balanced model for most tasks"
      preset:
        endpoint: "CLIProxyAPI"
        model: "claude-sonnet-4-20250514"

    - name: "claude-opus-4-20250514"
      label: "Claude Opus 4"
      description: "Anthropic's most capable model for complex tasks"
      preset:
        endpoint: "CLIProxyAPI"
        model: "claude-opus-4-20250514"

    - name: "claude-3-5-sonnet-20241022"
      label: "Claude 3.5 Sonnet"
      description: "Previous generation Sonnet model"
      preset:
        endpoint: "CLIProxyAPI"
        model: "claude-3-5-sonnet-20241022"

    - name: "claude-3-5-haiku-20241022"
      label: "Claude 3.5 Haiku"
      description: "Fast and efficient Claude model"
      preset:
        endpoint: "CLIProxyAPI"
        model: "claude-3-5-haiku-20241022"

    - name: "gemini-2.5-flash"
      label: "Gemini 2.5 Flash"
      description: "Google's fast multimodal model"
      preset:
        endpoint: "CLIProxyAPI"
        model: "gemini-2.5-flash"

    - name: "gemini-2.5-pro"
      label: "Gemini 2.5 Pro"
      description: "Google's advanced multimodal model"
      preset:
        endpoint: "CLIProxyAPI"
        model: "gemini-2.5-pro"

    - name: "gpt-4o"
      label: "GPT-4o"
      description: "OpenAI's multimodal flagship model"
      preset:
        endpoint: "CLIProxyAPI"
        model: "gpt-4o"

    - name: "gpt-4o-mini"
      label: "GPT-4o Mini"
      description: "OpenAI's efficient model"
      preset:
        endpoint: "CLIProxyAPI"
        model: "gpt-4o-mini"

registration:
  socialLogins: []

rateLimits:
  fileUploads:
    ipMax: 100
    ipWindowInMinutes: 60
    userMax: 50
    userWindowInMinutes: 60
  conversationsImport:
    ipMax: 100
    ipWindowInMinutes: 60
    userMax: 50
    userWindowInMinutes: 60
